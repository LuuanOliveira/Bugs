@model Cofin_Suporte.Models.Solucao

@{
    ViewData["Title"] = "";
}

<div>
    <h4>Solução</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Descrição Solução:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoSolução)
        </dd>
    </dl>
</div>
<div class="float-right">
    <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
    <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@Model.IdSolucao">Editar</a>
</div>